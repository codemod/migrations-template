{
	"include": [
		"recipes/*/src/**/*.ts",
		"recipes/*/src/**/*.tsx"
	],
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["@codemod.com/jssg-types"]
	}
}

